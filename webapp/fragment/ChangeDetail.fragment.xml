<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<sap.ui.layout.form:SimpleForm id="ChangeDetail"
			xmlns:sap.ui.layout.form="sap.ui.layout.form" 
			xmlns:sap.m="sap.m"
			editable="false"
			layout="ResponsiveGridLayout"
			title="{i18n>tVShowData}">
			<sap.ui.layout.form:content>
				<core:Title text="{TVShow>/title}"/>
				<Label text="Title"/>
				<Input value="{TVShow>/title}"/>
				<Label text="Year"/>
				<Input value="{TVShow>/year}"/>
				<Label text="Seasons"/>
				<Input value="{TVShow>/seasons}"/>
				<Label text="Genre"/>
				<Input value="{TVShow>/genre}"/>
				<core:Title text="{i18n>summary}"/>
				<Label text="Country" />
				<Input value="{TVShow>/country}"/>
				<Label text="Summary" />
				<Input value="{TVShow>/summary}"/>
				<Label text="Poster URL"/>
				<Input value="{TVShow>/poster}"/>
			</sap.ui.layout.form:content>
		</sap.ui.layout.form:SimpleForm>
	</VBox>
</core:FragmentDefinition>